                        25: '☀️', // Sunny (North India)
                        30: '☀️', // Sunny (North India)
                    },
                    'nov': {
                        1: '☀️', // Sunny (North India)
                        5: '☀️', // Sunny (North India)
                        10: '☀️', // Sunny (North India)
                        15: '☀️', // Sunny (North India)
                        20: '☀️', // Sunny (North India)
                        25: '☀️', // Sunny (North India)
                        30: '☀️', // Sunny (North India)
                    },
                    'dec': {
                        1: '☀️', // Sunny (North India)
                        5: '☀️', // Sunny (North India)
                        10: '❄️', // Snowy (Himalayan regions)
                        15: '☀️', // Sunny (North India)
                        20: '☀️', // Sunny (North India)
                        25: '❄️', // Snowy (Himalayan regions)
                        30: '☀️', // Sunny (North India)
                    },
                };

                return weatherConditions[month][day] || '';
            }

            // Function to get the month index
            function getMonthIndex(month) {
                switch (month) {
                    case 'jan':
                        return 0;
                    case 'feb':
                        return 1;
                    case 'mar':
                        return 2;
                    case 'apr':
                        return 3;
                    case 'may':
                        return 4;
                    case 'jun':
                        return 5;
                    case 'jul':
                        return 6;
                    case 'aug':
                        return 7;
                    case 'sep':
                        return 8;
                    case 'oct':
                        return 9;
                    case 'nov':
                        return 10;
                    case 'dec':
                        return 11;
                    default:
                        return 0;
                }
            }

            // Add event listeners to the month and year select elements
            monthSelect.addEventListener('change', updateCalendar);
            yearSelect.addEventListener('change', updateCalendar);

            // Update the calendar on page load
            updateCalendar();
        </script>

