        <!-- Calendar display for weather updates -->
        <div class="calendar">
        </div>

        <script>
            // Get the month and year select elements
            const monthSelect = document.getElementById('month');
            const yearSelect = document.getElementById('year');

            // Get the calendar container
            const calendarContainer = document.querySelector('.calendar');

            // Function to update the calendar
            function updateCalendar() {
                // Get the selected month and year
                const selectedMonth = monthSelect.value;
                const selectedYear = yearSelect.value;

                // Clear the existing calendar
                calendarContainer.innerHTML = '';

                // Create the week days
                const weekDays = ['Sun', 'Mon', 'Tue ', 'Wed', 'Thu', 'Fri', 'Sat'];
                const weekDaysHtml = weekDays.map(day => `<div class="day">${day}</div>`).join('');
                const weekDaysContainer = document.createElement('div');
                weekDaysContainer.classList.add('week');
                weekDaysContainer.innerHTML = weekDaysHtml;
                calendarContainer.appendChild(weekDaysContainer);

                // Get the first day of the month
                const firstDay = new Date(selectedYear, getMonthIndex(selectedMonth), 1);

                // Get the last day of the month
                const lastDay = new Date(selectedYear, getMonthIndex(selectedMonth) + 1, 0);

                // Calculate the number of weeks needed
                const numWeeks = Math.ceil((lastDay.getDate() + firstDay.getDay()) / 7);

                // Create the calendar weeks
                let day = 1;
                for (let i = 0; i < numWeeks; i++) {
                    const weekContainer = document.createElement('div');
                    weekContainer.classList.add('week');
                    for (let j = 0; j < 7; j++) {
                        const dateContainer = document.createElement('div');
                        dateContainer.classList.add('date');
                        if (i === 0 && j < firstDay.getDay()) {
                            // Empty cell for previous month's days
                            dateContainer.innerHTML = '';
                        } else if (day > lastDay.getDate()) {
                            // Empty cell for remaining days
                            dateContainer.innerHTML = '';
                        } else {
                            // Add weather condition
                            const weatherCondition = getWeatherCondition(day, selectedMonth);
                            const dateHtml = `${day}`;
                            const weatherHtml = `<span style="font-size: 12px;">${weatherCondition}</span>`;
                            dateContainer.innerHTML = `${dateHtml} ${weatherHtml}`;
                            day++;
                        }
                        weekContainer.appendChild(dateContainer);
                    }
                    calendarContainer.appendChild(weekContainer);
                }
            }

            // Function to get the weather condition
            function getWeatherCondition(day, month) {
                // This is a simple example, you can replace this with actual weather data
                const weatherConditions = {
                    'jan': {
                        1: '☀️', // Sunny (North India)
                        5: '🌫️', // Cloudy (North India)
                        10: '❄️', // Snowy (Himalayan regions)
                        15: '☀️', // Sunny (North India)
                        20: '🌫️', // Cloudy (North India)
                        25: '❄️', // Snowy (Himalayan regions)
                        30: '☀️', // Sunny (North India)
                    },
                    'feb': {
                        1: '☀️', // Sunny (North India)
                        5: '🌫️', // Cloudy (North India)
                        10: '❄️', // Snowy (Himalayan regions)
                        15: '☀️', // Sunny (North India)
                        20: '🌫️', // Cloudy (North India)
                        25: '❄️', // Snowy (Himalayan regions)
                        28: '☀️', // Sunny (North India)
                    },
                    'mar': {
                        1: '☀️', // Sunny (North India)
                        5: '🌫️', // Cloudy (North India)
                        10: '☀️', // Sunny (North India)
                        15: '🌞', // Hot (South India)
                        20: '☀️', // Sunny (North India)
                        25: '🌫️', // Cloudy (North India)
                        30: '☀️', // Sunny (North India)
                    },
                    'apr': {
                        1: '🌞', // Hot (South India)
                        5: '☀️', // Sunny (North India)
                        10: '☀️', // Sunny (North India)
                        15: '🌞', // Hot (South India)
                        20: '☀️', // Sunny (North India)
                        25: '☀️', // Sunny (North India)
                        30: '☀️', // Sunny (North India)
                    },
                    'may': {
                        1: '🌞', // Hot (South India)
                        5: '☀️', // Sunny (North India)
                        10: '☀️', // Sunny (North India)
                        15: '🌞', // Hot (South India)
                        20: '☀️', // Sunny (North India)
                        25: '☀️', // Sunny (North India)
                        30: '☀️', // Sunny ( North India)
                    },
                    'jun': {
                        1: '☁️☔️', // Rainy (Southwest monsoon)
                        5: '☁️☔️', // Rainy (Southwest monsoon)
                        10: '☁️☔️', // Rainy (Southwest monsoon)
                        15: '☁️☔️', // Rainy (Southwest monsoon)
